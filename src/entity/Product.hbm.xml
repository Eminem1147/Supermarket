<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- 这里name的值一定要和那个JavaBean的字段对应！ -->
    <class name="entity.Product" table="product">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="name" column="name"></property>
        <property name="inprice" column="inprice"></property>
        <property name="saleprice" column="saleprice"></property>
        <property name="qualityguarantee" column="qualityguarantee"></property>
    </class>
</hibernate-mapping>